<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
      <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
      <% end %>
  </div>
  <div class="container-fluid screen-login-size">
    <div class="row">
      <div class="col-8">
        <%=image_tag("login_img.jpg", alt: "img", class: "img-size")%>
      </div>

      <div class="col-4">
        <div class="form-size">
          <h2 class="h-login">dinnerdash</h2>

          <div class="field form-group">
            <%= f.label :nome %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control input" %>
          </div>
            
          <div class="field form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control input" %>
          </div>

          <div class="field form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control input" %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input" %>
          </div>

          <div class="actions">
            <%= f.submit "cadastrar", :class => 'btn btn-success button-size button' %>
          </div>
          <hr id="meuHr">
          <h5 class="h-login">JÃ¡ possui conta?</h5>
          <div class="actions">
            <%= link_to "fazer login", user_session_path, class: "btn btn-outline-success button-size" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

