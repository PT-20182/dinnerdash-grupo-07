<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="row">
    <div class="col-8">
      <%=image_tag("login_img.jpg", alt: "img", class: "img-size")%>
    </div>

    <div class="col-4">
      <div class="form-size">
        <h1>dinnerdash</h1>
          
        <div class="field form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control input" %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input" %>
        </div>

        <div class="actions">
          <%= f.submit "cadastrar", :class => 'btn btn-success button-size button' %>
        </div>
        <hr id="meuHr">
        <h4>JÃ¡ possui conta?</h4>
        <div class="actions">
          <%= link_to "fazer login", user_session_path, class: "btn btn-outline-success button-size" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

