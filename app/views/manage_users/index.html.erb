<head>
    <%= stylesheet_link_tag "manage_users", media: "all" %>
</head>
    <div class="navbar logo">
        <%= link_to('dinnerdash', root_path, class: "navbar-brand") %> 
    </div>
    
    <div class="ddnavbar">
        <div class="row no-gutters">
            <div class="col">
                <%= link_to 'backoffice', orders_path, class: 'nav-link backoffice' %>
            </div>
            <div class="col">
                <a class="nav-link" href="#">perfil</a>
            </div>
            <div class="col">
                <%= link_to('sair', destroy_user_session_path, method: :delete, class: "nav-link") %> 
            </div>
        </div>
    </div>
    
    <div class="title">
        <div class="container-fluid">
            <div class="row smaller-gutter">
                <div class="col-md title-t">
                    <h1>Backoffice</h1>
                    <h5>Gerencie pedidos, refeições e mais.</h5>
                </div>
            </div>
        </div>
    </div>


    <div class="aba">

        <div class="ddsubnav-container container-fluid">
            <ul class="ddsubnav row">
            
                <li><a href="#">Pedidos</a></li>
                <li class="ddsubnav-current"><a href="#">Usuários</a></li>
                <li><a href="#">Refeições</a></li>
                <li><a href="#">Categorias de Refeição</a></li>           
            </ul>
        </div>

        <div class="container-fluid">
            <% if flash[:alert] %>
                <div class="row smaller-gutter">
                    <div class="col-md alert alert-danger" role="alert"><%= flash[:alert] %></div>
                </div>
            <% end %>

            <div class="row smaller-gutter">
            <table class="col">
                <tr class="table_h">
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Cadastrado em</th>
                    <th></th><th></th>
                </tr>

                <% @users.each do |user| %>
                <tr>
                    <td>
                        <% if user.is_admin %>
                            <span class="admin-tag">admin</span>
                        <% end %>
                        <%= user.name %>
                    </td>
                    <td> <%= user.email %> </td>
                    <td> <%= user.created_at.strftime("%d/%m/%Y") %> </td>
                    <td class="editar"> <%= link_to "editar", edit_manage_user_path(user, page: @page) %> </td>
                    <td class="excluir"> <%= link_to "excluir", manage_user_path(user), method: :delete, data: {confirm: "Excluir usuário?"} %> </td>
                </tr>
                <% end %>
            </table>
            </div>

            <nav class="ddpage">
                <ul class="pagination justify-content-center">
                  <li class="page-item <%= @page == 0 ? 'disabled' : '' %>">
                    <% if @page > 0 %>
                        <%= link_to "&laquo;".html_safe, manage_users_path(page: @page - 1), class: "page-link ddpgturn", style: "font-size: 1.5em;" %>
                    <% end %>

                  </li>
                  <li class="page-item">
                    <% if @page_continue %>
                        <%= link_to "&raquo;".html_safe, manage_users_path(page: @page + 1), class: "page-link", style: "font-size: 1.5em;" %>
                    <% end %>
                  </li>
                </ul>
            </nav>

        </div>

    </div>

    <footer class="ddfooter container-fluid">
        <div class="row smaller-gutter">
            <div class="col-md" style="font-weight: bold;">dinnerdash | todos os direitos reservados</div>
            <!-- Fonte não é igual -->
            <div class="col-md" style="text-align: right; font-size: 0.75em;">desenvolvido por CJR</div>
        </div>
    </footer>

    <div id="background">
        <div class="darken-overlay"></div>
    </div>